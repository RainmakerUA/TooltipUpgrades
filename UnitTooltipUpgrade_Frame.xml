<!--
		## Unit Tooltip Upgrade ver. @@release-version@@
		## UnitTooltipUpgrade_Frame.xml - module
		Frame markup for UnitTooltipUpgrade addon
-->
<Ui xmlns="http://www.blizzard.com/wow/ui/"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Frame name="UnitTooltipUpgradeStatus" mixin="UnitTooltipUpgradeStatusMixin" frameLevel="1" virtual="true">
		<Size>
			<AbsDimension y="16"/>
		</Size>
		<Frames>
			<StatusBar parentKey="status" inherits="TextStatusBar" frameLevel="2">
				<Anchors>
					<Anchor point="TOPLEFT" x="2" y="-2" />
					<Anchor point="BOTTOMRIGHT" x="-2" y="2" />
				</Anchors>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar" />
				<BarColor r="0.5" g="0.5" b="0.5" a="1" />
			</StatusBar>
			<Frame parentKey="border" setAllPoints="true" frameLevel="3">
				<Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border" alphaMode="BLEND">
					<EdgeSize>
						<AbsValue val="10" />
						<BackgroundInsets>
							<AbsInset left="5" right="5" top="5" bottom="5"/>
						</BackgroundInsets>
					</EdgeSize>
				</Backdrop>
				<Layers>
					<Layer level="OVERLAY">
						<FontString parentKey="leftText" inherits="TextStatusBarText">
							<Anchors>
								<Anchor point="LEFT" x="2" y="0" />
							</Anchors>
						</FontString>
						<FontString parentKey="rightText" inherits="TextStatusBarText">
							<Anchors>
								<Anchor point="RIGHT" x="-2" y="0" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad" />
		</Scripts>
	</Frame>
</Ui>
